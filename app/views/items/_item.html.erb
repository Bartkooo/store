<div id="<%= dom_id item %>" class="card mb-3">
  <div class="row g-0">
    <div class="col-md-2">
      <img src="..." class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= link_to item.name, item %></h5>
        <p class="card-text"><%= item.description %></p>
        <p class="card-text"><%= item.price %></p>
      </div>
    </div>
  </div>
</div>