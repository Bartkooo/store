<div class="d-flex justify-content-between">
  <h1>Items</h1>
  <div class="d-flex align-items-center">

    <%= form_tag items_path, :method => 'get' do %>
      <%= select_tag :cat, options_for_select(categories_options, params[:cat]), class:"btn btn-secondary me-2", onchange:"this.form.submit()", include_blank:"Category" %>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to "New item", new_item_path, class:"btn btn-primary" %>
    <% else %>
      <%= link_to "New item", new_user_session_path, class:"btn btn-primary" %>
    <% end %>
  </div>
</div>

<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
  <% end %>
</div>